---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Navbar from "../components/Navbar.astro";
import About from "../components/About.astro";
import ListSection from "../components/ListSection.astro";
import TechnologiesSection from "../components/TechnologiesSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import Footer from "../components/Footer.astro";
import { navItems, workExperince, education } from "../data";
---

<Layout
  title="Portfolio"
  description="Tomás Trejos Gil's portfolio"
  keywords="portfolio, developer, systems engineer, student, ttrejosg"
>
  <Header />
  <Navbar
    navItems={navItems}
    centerTitle="Tomás Trejos Gil"
    centerSubtitle="Systems Engineer | Student"
  />
  <main>
    <About />
    <ListSection title="Work Experience" items={workExperince} />
    <ListSection title="Education" items={education} />
    <TechnologiesSection />
    <ProjectsSection />
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: 0 20%;
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  @media (max-width: 1000px) {
    .main {
      margin: 0 10%;
    }
  }
</style>
